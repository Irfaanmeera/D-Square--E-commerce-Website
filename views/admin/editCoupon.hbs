                </li>
            </ul>
        </section>
        <!-- SIDEBAR -->

        <!-- CONTENT -->
        <section id="content">
            <!-- NAVBAR -->
            <nav>
                <i class="bx bx-menu"></i>
                <a href="#" class="nav-link">Admin Panel</a>

                <a href="#" class="profile">
                    <img
                        src="https://media.licdn.com/dms/image/C5603AQFSg4R-IWdHpg/profile-displayphoto-shrink_200_200/0/1652343116317?e=1714003200&v=beta&t=pmFIU8GF6HCKqo4Wt4oyk5Ws-GDJy-mHECO-4ejmtdE" />
                </a>
                <a
                    href="/admin/login"
                    class="btn text-white px-4"
                    id="logoutbtn">Logout</a>

            </nav>
            <!-- NAVBAR -->

            <!-- MAIN -->
            <main>
                <div class="head-title">
                    <div class="left">
                        <h1>Add Category</h1>
                        <ul class="breadcrumb">
                            <li>
                                <a href="#">Home</a>
                            </li>
                            <li><i class="bx bx-chevron-right"></i></li>
                            <li>
                                <a href="/admin/product">Category</a>
                            </li>
                            <li><i class="bx bx-chevron-right"></i></li>
                            <li>
                                <a class="active" href="#">Add Category</a>
                            </li>
                        </ul>
                    </div>

                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 mx-auto p-5">

                            <form id="addCouponForm" action method="POST"
                                role="form">

                                <div class="couponCodeInput p-2">
                                    <label for="couponCode" class="mb-2">Coupon
                                        Code: </label>
                                    <div class="input-group">
                                        <input
                                            id="couponCode"
                                            name="couponCode"
                                            title="Enter a valid coupon code"
                                            type="text"
                                            class="form-control"
                                            required
                                            minlength="5"
                                            maxlength="16"
                                            value="{{coupon.couponCode}}" />
                                    </div>
                                    <div class="form-text">Add a relevant coupon
                                        code eg:
                                        NEWYEAR2024, PONGAL2024, VYZ548</div>
                                </div>

                                <div class="discountPercentageInput p-2">
                                    <label for="expiryDate"
                                        class="mb-2">Discount Percentage:
                                    </label>
                                    <div class="input-group">
                                        <input
                                            id="discountPercentage"
                                            name="discountPercentage"
                                            type="number"
                                            min="5"
                                            max="90"
                                            class="form-control"
                                            value="{{coupon.discountPercentage}}"
                                            required />
                                    </div>
                                    <div class="form-text">Choose a percentage
                                        to be discounted.
                                        Between 5% and 90%.</div>
                                </div>

                                <div class="startDateInput p-2">
                                    <label for="startDate">Coupon Start Date:
                                    </label>
                                    <div class="input-group">
                                        <input
                                            id="startDate"
                                            name="startDate"
                                            id="startDate"
                                            type="date"
                                            value="{{coupon.startDate}}"
                                            class="form-control"
                                            required />
                                    </div>
                                    <div class="form-text">Choose a start date
                                        for the discount to
                                        be considered.</div>
                                </div>

                                <div class="expiryDateInput p-2">
                                    <label for="expiryDate">Coupon Expiry Date :
                                    </label>
                                    <div class="input-group">
                                        <input
                                            id="expiryDate"
                                            name="expiryDate"
                                            type="date"
                                            value="{{coupon.expiryDate}}"
                                            class="form-control"
                                            required />
                                    </div>
                                    <div class="form-text">Choose an exipry date
                                        for the discount
                                        to end.</div>
                                </div>

                                <div class="minimumPurchaseInput p-2">
                                    <label for="minimumPurchase">Minimum
                                        Purchase: </label>
                                    <div class="input-group">
                                        <input
                                            id="minimumPurchase"
                                            name="minimumPurchase"
                                            type="text"
                                            class="form-control"
                                            value="{{coupon.minimumPurchase}}"
                                            required />
                                    </div>
                                    <div class="form-text">Minimum amount of
                                        purchase to be done
                                        to allow the coupon discount.
                                    </div>
                                </div>

                                <div class="maximumDiscount p-2">
                                    <label for="maximumDiscount">Maximum
                                        Discount: </label>
                                    <div class="input-group">
                                        <input
                                            id="maximumDiscount"
                                            name="maximumDiscount"
                                            type="text"
                                            class="form-control"
                                            value="{{coupon.maximumDiscount}}"
                                            required />
                                    </div>
                                    <div class="form-text">Maximum amount of
                                        discount to be
                                        allowed while using the coupon.
                                    </div>
                                </div>

                                <button type="button"
                                    class="btn btn-secondary">Close</button>
                                <button
                                    type="submit"
                                    onclick="editCategory()"
                                    class="btn ms-auto"
                                    id="submitbtn">Update Coupon</button>

                            </form>

                        </div>
                    </div>
                </div>

            </main>
            <!-- MAIN -->
        </section>
        <!-- CONTENT -->

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
