        <!-- Product Management table -->
        <div class="container">
            <table class="table" id="productTable" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                    <th scope="col" >Coupon Code</th>
                    <th scope="col">Discount</th>
                    <th scope="col" >Start Date</th>
                    <th scope="col">Expiry Date</th>
                    <th scope="col">Min Purchase</th>
                    <th scope="col"> Max Disc</th>
                    {{!-- <th scope="col" >Status</th> --}}
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                     {{#each couponData}}
                <tr>
                    <td>{{sum @index 1}}</td>
                    <td>{{this.couponCode}}</td>
                    <td>{{this.discountPercentage}}%</td>
                    <td>{{this.startDateFormatted}}</td>
                    <td>{{this.expiryDateFormatted}}</td>
                    <td>₹ {{this.minimumPurchase}}</td>
                    <td>₹ {{this.maximumDiscount}}</td>
                  
                    <td>
                          
                         <a href="/admin/editCoupon/?id={{this._id}}" class="btn text-primary" >
                                <i class='bx bxs-edit-alt'></i></a> 
                           
                                
                                <a id="deleteBtn{{@index}}" class="btn text-danger text-lg ms-auto"><i class='bx bxs-trash'></i></a>

                                <script>
                        let deleteBtn{{@index}} = document.getElementById('deleteBtn{{@index}}')

                        deleteBtn{{@index}}.addEventListener('click', async () => {

                            Swal.fire({
                                title: "Are you sure?",
                                text: "Do you want to Delete {{this.productName}} ?",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#3085d6",
                                cancelButtonColor: "#d33",
                                confirmButtonText: "Yes, Delete!"
                            }).then((result) => {
                                if (result.isConfirmed) {

                                    fetch('/admin/deleteCoupon/?id={{this._id}}', { method: 'GET' }).then()

                                    Swal.fire({
                                        title: "Deleted!",
                                        text: "Coupon has been deleted.",
                                        icon: "success"
                                    }).then(()=>location.reload())
                                }
                            });
                        })
                    </script>
                           
                        </td>
                    
                </tr>
                {{/each}}
                          
                     
                </tbody>
