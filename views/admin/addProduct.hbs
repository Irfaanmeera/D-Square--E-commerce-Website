		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Add Product</h1>
					<ul class="breadcrumb">
						<li>
							<a href="/admin">Home</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
                        <li>
							<a href="/admin/product">Product</a>
						</li>
                        <li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Add Product</a>
						</li>
					</ul>
				</div>
			
			</div>
           <div class="container">
           <div class="row">
             <div class="col-md-8 mx-auto p-5">
   
          <form id="addProductForm" action="/admin/addProduct" method="POST" enctype="multipart/form-data">
          <div class="mb-3" style="width=400px;" >
            
            <input name="productName" id="productName" type="text" class="form-control" placeholder="Product Name">
        </div>
        <div class="mb-3">
          
            <input name="productPrice" type="number" class="form-control" min="100" placeholder="Product Price">
        </div>
		<div class="mb-3">
          
            <input name="productDescription" type="text" class="form-control" placeholder="Product Description">
        </div>
        <div class="mb-3">
            <label for="productName" class="form-label">Select Category</label>
            <select name="category" class="form-select" value="Category" aria-label="Default select example">
                {{#each categoryData}}
                <option>{{this.categoryName}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3">
           
            <input name="brand" id="brand" type="text" class="form-control" placeholder="Brand">
        </div>
        <div class="mb-3">
          
            <input name="productStock" type="number" class="form-control" min="0" placeholder="Product Stock">
        </div>
                              <div class="mb-3">
								<label for="productName" class="form-label">Image 1</label>
                                <img id="preview1" src="" style="width: 100px; height: 100px; display:none" alt="Img">
                                <div class="input-group mb-3">
                                    <input id="productImage1" name="productImage1" type="file" class="form-control"
                                        placeholder="Product Image 1" onchange="displayImage1()" >
                                </div>
                            </div>
                            <div class="mb-3">
									<label for="productName" class="form-label">Image 2</label>
                                <img id="preview2" src="" style="width: 100px; height: 100px; display:none" alt="Img">
                                <div class="input-group mb-3">
                                    <input id="productImage2" name="productImage2" type="file" class="form-control"
                                        placeholder="Product Image 2" onchange="displayImage2()" >
                                </div>
                            </div>
                            <div class="mb-3">
									<label for="productName" class="form-label">Image 3</label>
                                <img id="preview3" src="" style="width: 100px; height: 100px; display:none;" alt="Img">
                                <div class="input-group mb-3">
                                    <input id="productImage3" name="productImage3" type="file" class="form-control"
                                        placeholder="Product Image 3" onchange="displayImage3()" >
                                </div>
                            </div>
							<div class="mb-3">
									<label for="productName" class="form-label">Image 4</label>
                                <img id="preview3" src="" style="width: 100px; height: 100px; display:none;" alt="Img">
                                <div class="input-group mb-3">
                                    <input id="productImage3" name="productImage3" type="file" class="form-control"
                                        placeholder="Product Image 3" onchange="displayImage3()" >
                                </div>
                            </div>
                            
        <button  onclick="addProduct()" class="btn ms-auto" id="submitbtn" >Save Product</button>
    </form>
</div>
</div>
</div>


        
			
		</main>
