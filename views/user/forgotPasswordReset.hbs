    <div class ="row">
        <div class="col-md-6 mx-auto p-0">
            <div class="card">
    <div class="login-box">
        <div class="login-snip">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Reset Password</label>
            <input href="" id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
            <div class="login-space">
                <div class="login" class="resetForm">
                     <form
                     id="otpForm"
                  class="mx-1 mx-md-1"
                  action="/forgotPasswordReset"
                  method="POST"
                  role="form"
                >
                    <div class="group">
                        <label for="pass" class="label">New Password</label>
                        <input id="newPassword" name="newPassword" type="password" class="input" placeholder="Enter New Password">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Confirm Password</label>
                        <input title="Passwords don't match" id="pass" type="password" class="input" data-type="password" placeholder="Confirm new password" required data-rule-equalTo="#newPassword">
                    </div>
                   
                    <div class="group">
                        <input onclick="passwordReset()" class="button" value="Reset Password">
                    </div>
        </form>

                    <div class="hr"></div>
                    <div class="foot">
                        <a href="/login">Back to Login</a>
                    </div>
                </div>

             
            </div>
        </div>
    </div>   
    </div>
    </div>
    </div>
    
