{{> userHeader}}

<div class="breadcrumbs mb-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="breadcrumbs-content">
                        <h1 class="page-title">Shopping Cart</h1>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-nav">
                        <li><a href="/"><i class="lni lni-home"></i> Home</a></li>
                        <li>Cart</li>
                         
                    </ul>
                </div>
            </div>
        </div>
    </div>

<div class="container main-container headerOffset">

  <!--/.row-->

  <div class="row">
  
    {{!-- <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar col-xs-6 col-xxs-12 text-center-xs" style="margin-left:600px; margin-bottom:40px;">
      <h6 class="caps"><a href="/shop"><i class="fa fa-chevron-left"></i> Back to shopping </a></h6>
    </div> --}}
  </div>
  <!--/.row-->

  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
      <div class="row ">
        <div class="col-xs-12 col-sm-12 ">
          <div class="cartContent w100" style="width:100%;margin-bottom:50px;">
            <table class="cartTable table-responsive" style="font-color:rgb(35, 34, 34)">
              <tbody>
                <tr style="color:rgb(73, 71, 71);height: 80px;">
                  <td style="width:15%;"> Product</td>
                  <td style="width:25%">Details</td>
                 
                  <td style="width:20%">QTY</td>
                  <td style="width:15%">Total</td>
                   <td style="width:10%" class="delete">Remove</td>
                </tr>
                {{#each userCartData}}
                <tr class="CartProduct" id="cartProduct{{@index}}" style="height:120px;" >
                  <td class="CartProductThumb ">
                    <div><a href=""><img src="images/productImages/{{this.productId.productImage1}}" style="width:40%;height:40%;" alt="img"></a>
                    </div>
                  </td>
                  <td>
                    <div class="CartDescription">
                      <h6><a href="/productDetails/{{this.productId._id}}">{{this.productId.productName}}</a></h6>
                      <div id="productPrice{{@index}}" class="price"><span>₹{{this.productId.productPrice}}</span>
                      </div>
                    </div>
                  </td>
                  
                  <td>
                    <button type="button" class="btn btn-danger btn-sm"
                      onclick="cartDec('{{this._id}}','{{@index}}')">-</button>
                    <span id="productQuantity{{@index}}"> &nbsp; &nbsp;{{this.productQuantity}} &nbsp; &nbsp; </span>
                    <button type="button" class="btn btn-primary btn-sm"
                      onclick="cartInc('{{this._id}}','{{@index}}')">+</button>
                  </td>
                  <td id="totalCostPerProduct{{@index}}" class="price">₹{{this.totalCostPerProduct}}</td>
                  <td class="delete"><a title="Delete" onclick="deleteCart('{{this._id}}','{{@index}}')">  <i class="fas fa-trash"></i></a></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <!--cartContent-->

          <div class="cartFooter w100">
            <div class="box-footer">
              <div class="pull-left"><a href="/" class="btn btn-default"> <i class="fa fa-arrow-left"></i>
                   Continue shopping </a></div>
              <div class="pull-right">
                <a href="/cart">
                  <button class="btn btn-default"><i class="fa fa-undo"></i> &nbsp; Update cart </button>
                </a>
              </div>
            </div>
          </div>
          <!--/ cartFooter -->

        </div>
      </div>
      <!--/row end-->

    </div>
    <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
      <div class="contentBox" style="border-color:rgb(231, 229, 229);border-style:solid;padding:10px;background-color:rgb(242, 243, 244)">
        <div class="w100 costDetails">
       
            <div class="w100 cartMiniTable">
              <table id="cart-summary" class="std table" style="margin-bottom:40px;">
                <tbody >
                  <tr>
                    <td>Total Price</td>
                    <td id="totalPrice" class="price">₹{{grandTotal}}</td>
                  </tr>
                  <tr style="">
                    <td>Shipping</td>
                    <td class="price"><span class="success">Free shipping</span></td>
                  </tr>
                  <tr>
                    <td>Grand Total</td>
                    <td class="site-color" id="total-price">₹<span id="grandTotal">{{grandTotal}}</span></td>
                  </tr>
                </tbody>
              </table>
            </div>
            {{#if userCartData.length}}
          <div class="table-block" id="order-detail-content" ><a class="btn btn-primary btn-block "
              title="checkout" href="/checkout"> Proceed to
              checkout &nbsp; <i class="fa fa-arrow-right"></i> </a>
            {{/if}}
          </div>
        </div>
      </div>
      <!-- End popular -->

    </div>
    <!--/rightSidebar-->

  </div>
  <!--/row-->

  
</div>
<!-- /.main-container -->

<div class="gap"></div>

