<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>D SQUARE</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <div class="row">
      <div class="col-md-6 mx-auto p-0">
        <div class="card">
          <div class="login-box">
            <div class="login-snip">
              <input
                id="tab-1"
                type="radio"
                name="tab"
                class="sign-in"
                checked
              /><label for="tab-1" class="tab">Login</label>
              <input
                href="/login"
                id="tab-2"
                type="radio"
                name="tab"
                class="sign-up"
              /><label for="tab-2" class="tab">Sign Up</label>
              <div class="login-space">
                <div class="login">

                      <form
                  class="mx-1 mx-md-1"
                  action="/login"
                  method="POST"
                  role="form"
                >
                   <p class="text-center text-white h6 mb-3 mx-1 mx-md-4 mt-3">{{message}}</p>
                  <div class="group">
                    <label for="user" class="label">Email</label>
                    <input
                      id="user"
                      type="email"
                      class="input"
                      placeholder="Enter your mail id"
                      name="email"
                      required
                    />
                  </div>
                  <div class="group">
                    <label for="pass" class="label">Password</label>
                    <input
                      id="pass"
                      type="password"
                      class="input"
                      data-type="password"
                      placeholder="Enter your password"
                      name="password"
                      required
                    />
                  </div>
                  {{!-- <div class="group">
                    <input id="check" type="checkbox" class="check" checked />
                    <label for="check"
                      ><span class="icon"></span> Keep me Signed in</label
                    >
                  </div> --}}
                  <div class="group">
                    <input type="submit" class="button" value="Sign In" />
                  </div>

                  </form>

                  <div class="hr"></div>
                  <div class="foot">
                    <a href="/forgotPassword"
                      >Forgot Password?</a
                    >
                  </div>
                </div>

                <div class="sign-up-form">
                   <form id="regForm"
                  class="mx-1 mx-md-1"
                  action="/otp"
                  method="POST"
                  role="form"
                >

                 <p class="text-center text-white h6 mb-3 mx-1 mx-md-4 mt-3">{{message}}</p>
                  <div class="group">
                    <input
                      id="user"
                      type="text"
                      class="input"
                      placeholder="Username"
                      name="name"
                      required
                    />
                  </div>

                  <div class="group">
                    <input
                      id="pass"
                      type="text"
                      class="input"
                      placeholder="Email address"
                      name="email"
                      required
                    />
                  </div>
                  <div class="group">
                    <input
                      id="pass"
                      type="number"
                      class="input"
                      data-type="number"
                      placeholder="Mobile Number"
                      name="mobile"
                      required
                    />
                  </div>
                  <div class="group">
                    <input
                      id="pass"
                      type="password"
                      class="input"
                      data-type="password"
                      placeholder="Password"
                      name="password"
                      onkeyup="checkPasswordStrength();"
                      required
                    />
                  </div>
                  <div class="group">
                    <input type="submit" class="button" value="Send OTP" />
                  </div>
               </form>
                  <div class="hr"></div>
                  <div class="foot">
                    <!-- <label for="tab-1">Already Member?</label> -->
                    <a href="/login"
                      >Already a member?</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

      <script src="assets/js/jquery.validate.js"></script>
<script>
    $().ready(function () {
      // validate the comment form when it is submitted
      $("#regForm").validate();

      // validate signup form on keyup and submit
      $(".regForm").validate({
        errorLabelContainer: $(".regForm div.error")
      });
    });

    function checkPasswordStrength() {
    var number = /([0-9])/;
    var alphabets = /([a-zA-Z])/;
    var special_characters = /([~,!,@,#,$,%,^,&,*,-,_,+,=,?,>,<])/;
    var password = document.getElementById('pass').value.trim();
    var passwordStrengthStatus = document.getElementById('password-strength-status');

    if (password.length < 6) {
        passwordStrengthStatus.className = 'weak-password';
        passwordStrengthStatus.innerHTML = "Weak (should be at least 6 characters.)";
        passwordStrengthStatus.style.color = "red";
    } else {
        if (password.match(number) && password.match(alphabets) && password.match(special_characters)) {
            passwordStrengthStatus.className = 'strong-password';
            passwordStrengthStatus.innerHTML = "Strong";
            passwordStrengthStatus.style.color = "green";
        } else {
            passwordStrengthStatus.className = 'medium-password';
            passwordStrengthStatus.innerHTML = "Medium (should include alphabets, numbers and special characters.)";
            passwordStrengthStatus.style.color = "orange";
        }
    }
}


  </script>
